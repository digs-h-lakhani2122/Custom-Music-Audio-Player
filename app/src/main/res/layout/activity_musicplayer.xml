<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".musicplayer">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="0.0"
        android:layout_margin="20dp"
        android:textColor="#C9FF5722"
        android:textStyle="bold"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:layout_gravity="center"
        android:layout_margin="100dp"
        android:background="@drawable/round"
        app:srcCompat="@drawable/ic_music_note_black_24dp" />

    <TextView
        android:id="@+id/artistName123"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.0"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="#B6FF5722" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.0"
            android:layout_margin="10dp"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/startSeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.0"
            android:gravity="center"
            tools:ignore="NestedWeights" />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/endSeek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="center"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.0"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="30dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/previous"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="0"
                android:layout_marginHorizontal="10dp"
                app:srcCompat="@drawable/ic_skip_previous_black_24dp"
                android:background="@drawable/round"
                android:contentDescription="@string/todo"
                tools:ignore="NestedWeights" />

            <ImageButton
                android:id="@+id/backWard"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="0"
                android:background="@drawable/round"
                android:layout_marginHorizontal="10dp"
                app:srcCompat="@drawable/ic_fast_rewind_black_24dp"
                android:contentDescription="@string/todo" />

            <ImageButton
                android:id="@+id/playButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="0"
                android:background="@drawable/round"
                android:layout_marginHorizontal="10dp"
                app:srcCompat="@drawable/ic_play_arrow_black_24dp"
                android:contentDescription="@string/todo" />

<!--            <ImageButton-->
<!--                android:id="@+id/pauseButton"-->
<!--                android:layout_width="40dp"-->
<!--                android:layout_height="40dp"-->
<!--                android:layout_weight="0"-->
<!--                android:background="@drawable/round"-->
<!--                android:layout_marginHorizontal="20dp"-->
<!--                app:srcCompat="@drawable/ic_pause_black_24dp" />-->

            <ImageButton
                android:id="@+id/forWard"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="0"
                android:background="@drawable/round"
                android:layout_marginHorizontal="10dp"
                app:srcCompat="@drawable/ic_fast_forward_black_24dp"
                android:contentDescription="@string/todo" />

            <ImageButton
                android:id="@+id/next"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="0"
                android:background="@drawable/round"
                android:layout_marginHorizontal="10dp"
                app:srcCompat="@drawable/ic_skip_next_black_24dp"
                android:contentDescription="@string/todo" />
        </LinearLayout>
    </LinearLayout>